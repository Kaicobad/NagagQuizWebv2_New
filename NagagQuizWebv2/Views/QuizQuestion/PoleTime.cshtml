
@{
    Layout = "_LayoutPole";
}
<style>
    .card-header {
        width: 180px;
        height: 180px;
        left: 74px;
        top: 0px;
        /* UI Colors/Gradient */

        background: linear-gradient(315deg, #ED2F2B -1.91%, #FB6C3C 83.97%);
        /* Black/Line or stroke */

        border: 4px solid #E5E5E5;
   }
   .card-title{
        font-family: sans-serif;
        font-style: normal;
        font-weight: 600;
        font-size: 22px;
        line-height: 33px;
        align-items: center;
        text-align: center;
        color: #000000;
   }

    .card-text{
        font-family: sans-serif;
        height: 40px;
        font-weight: 400;
        font-size: 14px;
        line-height: 20px;
        align-items: center;
        text-align: center;
        color: #666666;
    }
    a{
        width: 100%;
    }

    .card {
        background-color: #F8F8F8;
        border: none;
    }
   .notice{
       font-family: sans-serif;
    font-weight: 400;
    font-size: 12px;
   }
   .time{
       height: 33px;
    font-weight: 600;
    font-size: 22px;
    line-height: 33px;
   }

  
</style>
<div class="container-fluid">
    <div class="timerCircle" style="margin-top: 20%;">
        <div class="card text-center">
            <div class="card-header rounded-circle" style=" padding: 25px 25px 25px 25px;
    margin-top: 5%;
    color: #FFFFFF;
    text-align: center;
    float: inline-end;
    margin: auto;">
                <div class="notice">
                    পরবর্তী
                    প্রেডিক্ট অ্যান্ড উইন
                </div>
                
                <div class="time">
                    10:00 AM
                </div class="">
                
                <div class="date">
                    <span>
                         <i class="fa fa-calendar" aria-hidden="true"></i>
                21 Nov 2022
                    </span>
                   
                </div>
            </div>
            <div class="card-body">
                <h5 class="card-title">প্রেডিক্ট অ্যান্ড উইন</h5>
                <p class="card-text">
                    আজকের প্রেডিক্ট অ্যান্ড উইন এর সময় শেষ
                    আগামীকাল আবার চেষ্টা করুন
                </p>
               
            </div>
            @*<div class="card-footer text-muted">
                2 days ago
            </div>*@
        </div>
    </div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-danger" style="
    height: 45px;
">হোম এ ফিরে যান</a>
</div>
