
<style>
    .bannerImage {
        background-image: url('../pagecontents/banner/quizresultbanner.png');
        background-repeat: no-repeat;
        background-size: 100% 100%;
        min-height: 400px;
    }
</style>

<nav class="navbar navbar-light" style="background-color:white;padding:20px 15px;">
    <div class="container-fluid" style="margin-left:-5px">
        <a class="navbar-brand" asp-action="index" asp-controller="Home" style="width:100%;">
            <i style="font-size:22px" class="fa fa-angle-left "></i>
            <h4 style="margin-left: 20px; margin-top: 10px;  color: black; font-weight: 500;font-size:20px">
                কুইজ এর ফলাফল
            </h4>
        </a>
    </div>
</nav>


<div class="container-fluid mt-3">
    <div class="row  bannerImage" style="background-position-x:center;padding-bottom: 15px;">
        <div class="fale" style="margin-top: 200px;">
        </div>
        <div class="text-center">
            <h4 style="color:black;font-size:16px;font-weight:400">আপনি সঠিক উত্তর দিয়েছেন</h4>
            <span style="color:rgba(236, 6, 19, 1);font-size:22px;font-weight:600"> <span class="tobng">@ViewBag.totalQestion</span>টি প্রশ্ন</span>
        </div>

        <div class="container mt-3">
            <div class="row" style="background-color: #F58220;  margin-right: 6%; margin-left: 6%;    padding: 40px 20px;
    border-radius: 8px">
                <div class="col-6 text-center">
                    <h4 style="color:white;font-size:15px;">আপনার স্কোর</h4>
                    <span class="tobng" style="color:white;font-weight:600;font-size:18px;margin-top:5px">@ViewBag.score</span>
                </div>
                <div class="col-6 text-center">
                    <h4 style="color:white;font-size:15px;">সময় নিয়েছেন</h4>
                    <span style="color:white;font-weight:600;font-size:18px;margin-top:5px"><span class="tobng">@ViewBag.bstt</span> সেঃ</span>
                </div>
            </div>
        </div>

    </div>

    <div style="padding-left: 10px;
    padding-right: 10px;margin-top:10px;">
        <a asp-action="Index" asp-controller="QuizQuestion" style="background-color:rgba(236, 6, 19, 1);color:white;padding:10px;border-radius:8px;width:100%" class="btn mt-3">আবার চেষ্টা করুন</a>

    </div>

    <div style="padding-left: 10px;
    padding-right: 10px;">
        <a asp-action="PoleQuestion" asp-controller="QuizQuestion"
           style="
    color: white;
    padding: 10px;
    border-radius: 8px;
    width: 100%;
    border: 1px solid #EC0613;
    color: #EC0613;
    font-weight: 500;" class="btn mt-3">প্রেডিক্ট অ্যান্ড উইন</a>

    </div>

    <div style="padding-left: 10px;
    padding-right: 10px;">
        <a asp-action="NagadPoll" asp-controller="QuizQuestion"
           style="
    color: white;
    padding: 10px;
    border-radius: 8px;
    width: 100%;
    border: 1px solid #EC0613;
    color: #EC0613;
    font-weight: 500;" class="btn mt-3">নগদ ট্রিভিয়া</a>

    </div>



</div>

<div class="row" style="padding-left: 22px;padding-right: 20px;margin-top: 20px;padding-bottom: 20px;">
    <img src="~/pagecontents/banner/bottom_banner_3.jpeg" style="border-top-left-radius: 13px;
    border-top-right-radius: 20px;
    border-bottom-right-radius: 20px;
    border-bottom-left-radius: 13px;" />
</div>