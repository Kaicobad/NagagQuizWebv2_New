<script>
    function validation() {
        let msisdn = $('#phnNumber').val();
        let fthree = msisdn.substring(0, 3)

        if (msisdn == "" || msisdn == undefined || isNaN(msisdn)) {
            $('#errmsg').show();
            $('#errmsg').text("সঠিক মোবাইল নাম্বার প্রদান করুন ");
            return false;
        }
        else if ((fthree != "013") && fthree != "014" && fthree != "015" && fthree != "016" && fthree != "017" && fthree != "018" && fthree != "019") {
            $('#errmsg').show();
            $('#errmsg').text("সঠিক মোবাইল নাম্বার প্রদান করুন ");
        }
        else if (msisdn.length != 11) {
            $('#errmsg').show();
            $('#errmsg').text("আপনার ১১ ডিজিটের সঠিক নাম্বারটি প্রদান করুন");
            return false;
        }
        else {
            return true;
        }
    }

    function MakeLogin() {
        $('#errmsg').hide();
        if (!validation()) {
            return;
        }
        let msisdn = $('#phnNumber').val();
        var url = '@Url.Action("CreateUser", "Signin")';
        url += '?mobileNumber=' + msisdn;
        window.location.href = url;
    }

</script>

